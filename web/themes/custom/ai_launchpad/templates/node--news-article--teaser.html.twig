{% extends 'node--teaser.html.twig' %}

{% block content %}
  {% block image %}
    {% if file_url(node.field_image.entity.field_media_image.entity.fileuri) %}
      <img class="overflow-hidden rounded-lg h-56 lg:h-72 w-full object-cover" src="{{ file_url(node.field_image.entity.field_media_image.entity.fileuri) }}" alt="">
    {% endif %}
  {% endblock %}
  {% block category %}
    <div class="mt-2">
      {{ content.field_tags }}
    </div>
  {% endblock %}
  {% block label %}
    <div class="mt-1">
      <h1 class="text-3xl m-0">{{ label }}</h1>
    </div>
  {% endblock %}
  {% block summary %}
    <div class="my-2">
      {{ content.body }}
    </div>
  {% endblock %}
  <div class="mt-1 text-sm text-secondary">{{ 'Published:'|trans }} {{ date }} {{ 'by'|trans }} {{ author_name }}</div>
{% endblock %}
