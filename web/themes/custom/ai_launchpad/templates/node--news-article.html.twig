<div class="max-w-3xl mx-auto px-3 my-8 md:my-16 lg:my-24">
  <h1 class="text-5xl md:text-6xl">{{ label }}</h1>
</div>

{% if content.field_image %}
  <div class="max-w-4xl mx-auto px-3 my-4 md:my-8 lg:my-16">
    {{ content.field_image }}
  </div>
{% endif %}

<div class="max-w-3xl mx-auto px-3 my-12 md:my-24 lg:my-32">
  {{ content.body }}
</div>

{{ content|without('field_tags', 'body', 'field_image') }}

<div class="max-w-3xl mx-auto px-3 mb-12 md:mb-24 lg:mb-32">
  {{ content.field_tags }}
</div>
