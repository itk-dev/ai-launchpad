{% block paragraph %}
  <section class="max-w-3xl mx-auto px-3 my-3">
    <div class="flex flex-col md:flex-row gap-4">
      {% block content %}
        {% if content.field_media %}
          <div class="md:w-1/3">
            {{ content.field_media }}
          </div>
        {% endif %}
        <div>
          {{ content|without('field_media') }}
        </div>
      {% endblock %}
    </div>
  </section>
{% endblock paragraph %}
