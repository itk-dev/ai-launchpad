{% block paragraph %}
  <div class="flex flex-col md:flex-row gap-3 md:gap-6 my-3">
    {% block content %}
      {% if content.field_media %}
        <div class="md:w-1/5 flex-shrink-0">
          {{ content.field_media }}
        </div>
      {% endif %}
      <div>
        {{ content|without('field_media') }}
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
