<div id="{{ ui.id }}" class="chat-window border p-4 rounded my-4">
  <header class="flex items-center gap-2 border-b border-secondary pb-4">
    <div class="logo">
      <i class="fa-solid fa-robot text-secondary"></i>
    </div>
    {% if ui.models %}
      <select name="models" id="models" class="btn-default">
        <option value="">{{ 'Select a Language Model'|t }}</option>
        {% for item in ui.models %}
          <option value="{{ item }}">{{ item }}</option>
        {% endfor %}
      </select>
    {% endif %}
    {{ include('@chat/chat-btn-reset.html.twig') }}
    {% if buttons %}
      <div class="ml-auto flex gap-2">
        {{ include('@chat/chat-btn-minimize.html.twig') }}
        {{ include('@chat/chat-btn-close.html.twig') }}
        <button id="btnMinimizeChat" class="btn-icon"><i class="icon fa-solid fa-window-minimize"></i></button>
        <button id="btnOpenGlobalNavigation" class="btn-icon"><i class="icon fa-solid fa-xmark"></i></button>
      </div>
    {% endif %}
  </header>
  <main class="min-h-80 max-h-96 flex flex-col gap-2 justify-end py-4 overflow-y-auto">
    <!-- Chat messages -->
  </main>
  <label for="inputMessage"><span class="text-secondary"><i class="fa-solid fa-message mr-2"></i><span>Start din dialog</span></span></label>
  <textarea id="inputMessage" class="border border-secondary w-full rounded-sm bg-primary p-2" rows="4"></textarea>
</div>
